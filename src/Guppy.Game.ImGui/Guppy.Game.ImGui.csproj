<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <RuntimeIdentifiers>win-x64;win-x86;linux-x64;linux-arm;linux-arm64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\libraries\ImGui.NET\src\ImGui.NET\ImGui.NET.csproj" ExcludeAssets="All" />
    <ProjectReference Include="..\Guppy.Game.ImGui.ImGuiNETSourceGenerator\Guppy.Game.ImGui.ImGuiNETSourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Guppy.Game.Input\Guppy.Game.Input.csproj" />
    <ProjectReference Include="..\Guppy.Resources\Guppy.Resources.csproj" />
    <ProjectReference Include="..\Guppy\Guppy.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="natives\**\*.dll" Condition=" $(RuntimeIdentifier.Contains('win')) OR ( '$(RuntimeIdentifier)' == '' AND '$(OS)' == 'Windows_NT' )">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="natives\**\*.so" Condition=" $(RuntimeIdentifier.Contains('linux')) OR ( '$(RuntimeIdentifier)' == '' AND '$(OS)' == 'UNIX' ) ">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Using Include="System.Numerics">
      <Alias>Num</Alias>
    </Using>
  </ItemGroup>

  <ItemGroup>
    <Using Include="ImGuiNET.ImGui">
      <Alias>ImGuiNet</Alias>
    </Using>
  </ItemGroup>

</Project>
